
<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @question.text %>
</p>

<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :answer %><br>
    <%= f.text_area :answer %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', questions_path %>